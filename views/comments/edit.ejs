<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center">Edit comment</h2>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/photos/<%= photo_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name= "comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="btn btn-sm btn-default" href="/photos">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>